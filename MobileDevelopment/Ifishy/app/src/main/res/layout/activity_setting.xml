<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.setting.Setting"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/global_page_padding_margin">

        <ImageButton
            android:backgroundTint="@color/secondary_light"
            android:contentDescription="@string/back"
            android:id="@+id/back"
            android:layout_width="@dimen/back_button"
            android:layout_height="@dimen/back_button"
            android:background="@drawable/image_button"
            android:src="@drawable/back"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/tool_settings"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/FaqOnSettings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:padding="10dp"
            android:background="@drawable/search_bar"
            android:backgroundTint="@color/edit_text_background"
            android:text="@string/faq"
            android:fontFamily="@font/poppins_medium"
            android:textSize="20sp"
            android:textColor="@color/primary_light"
            android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@id/settings"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/expandButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="24dp"
            android:contentDescription="@string/expand_tool_2"
            android:rotation="180"
            android:src="@drawable/back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settings" />

        <Spinner
            android:id="@+id/languageSpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:padding="10dp"
            android:background="@drawable/search_bar"
            android:backgroundTint="@color/edit_text_background"
            android:text="@string/faq"
            android:fontFamily="@font/poppins_medium"
            android:textSize="20sp"
            android:textColor="@color/primary_light"
            android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@id/FaqOnSettings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_night"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:padding="10dp"
            android:background="@drawable/search_bar"
            android:backgroundTint="@color/edit_text_background"
            android:text="@string/settings_nightmode"
            android:fontFamily="@font/poppins_medium"
            android:textSize="20sp"
            android:textColor="@color/primary_light"
            android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@id/languageSpinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_notif"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:padding="10dp"
            android:background="@drawable/search_bar"
            android:backgroundTint="@color/edit_text_background"
            android:text="@string/notification"
            android:fontFamily="@font/poppins_medium"
            android:textSize="20sp"
            android:textColor="@color/primary_light"
            android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@id/switch_night"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/settings_logout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:padding="10dp"
            android:background="@drawable/search_bar"
            android:backgroundTint="@color/logout"
            android:text="@string/tools_logout"
            android:fontFamily="@font/poppins_medium"
            android:textSize="20sp"
            android:textColor="@color/logout_teks"
            android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@id/switch_notif"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="208dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/contact_us"
            android:textAlignment="center"
            android:textColor="@color/contact"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settings_logout" />

        <TextView
            android:id="@+id/email_contact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textSize="20sp"
            android:text="@string/tools_email"
            android:textColor="@color/contact"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/contact"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>