<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:elevation="5dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_photo"
            android:contentDescription="@string/foto_preview_postingan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/authorCom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle"
            android:backgroundTint="@color/secondary_light"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:layout_marginStart="10dp"
            android:paddingHorizontal="@dimen/author_padding_horizontal"
            android:paddingVertical="@dimen/author_padding_vertical"
            android:textAlignment="center"
            android:textColor="@color/primary_light"
            android:textSize="@dimen/small_text"
            app:layout_constraintStart_toEndOf="@id/item_photo"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/tools_author"/>

        <TextView
            android:id="@+id/judul_artikel_com"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_bold"
            tools:text="White Spot Disease"
            android:textSize="@dimen/medium_text"
            app:layout_constraintStart_toEndOf="@id/item_photo"
            app:layout_constraintTop_toBottomOf="@id/authorCom" />

        <ImageButton
            android:id="@+id/buttonComm"
            android:layout_width="@dimen/image_button"
            android:layout_height="@dimen/image_button"
            android:contentDescription="@string/comment_icon"
            android:src="@drawable/comment"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/judul_artikel_com"
            app:layout_constraintStart_toEndOf="@id/item_photo" />

        <TextView
            android:id="@+id/tvCount1"
            android:layout_width="@dimen/image_button"
            android:layout_height="@dimen/image_button"
            android:textSize="@dimen/small_text"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:text="@string/count_comment"
            android:padding="2dp"
            app:layout_constraintStart_toEndOf="@id/buttonComm"
            app:layout_constraintTop_toBottomOf="@id/judul_artikel_com"/>

        <ImageButton
            android:id="@+id/buttonshare"
            android:layout_width="@dimen/image_button"
            android:layout_height="@dimen/image_button"
            android:contentDescription="@string/share_button_biasa"
            android:src="@drawable/share_1"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/judul_artikel_com"
            app:layout_constraintStart_toEndOf="@id/tvCount1" />

        <TextView
            android:id="@+id/tvCount2"
            android:layout_width="@dimen/image_button"
            android:layout_height="@dimen/image_button"
            android:textSize="@dimen/small_text"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:text="@string/count_comment"
            android:padding="2dp"
            app:layout_constraintStart_toEndOf="@id/buttonshare"
            app:layout_constraintTop_toBottomOf="@id/judul_artikel_com"/>

        <ImageButton
            android:id="@+id/upvote"
            android:layout_width="@dimen/image_button"
            android:layout_height="@dimen/image_button"
            android:contentDescription="@string/upvote"
            android:src="@drawable/upvote"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvCount3"
            android:layout_width="@dimen/image_button"
            android:layout_height="@dimen/image_button"
            android:textSize="@dimen/small_text"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:text="@string/count_comment"
            android:padding="2dp"
            android:textAlignment="center"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/upvote"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageButton
            android:id="@+id/downvote"
            android:layout_width="@dimen/image_button"
            android:layout_height="@dimen/image_button"
            android:contentDescription="@string/downvote"
            android:src="@drawable/downvote"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvCount3"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/date_featureall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textSize="@dimen/small_text"
            android:text="@string/tools_date"
            android:textColor="@color/edit_text_background"
            android:layout_marginBottom="18dp"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toStartOf="@id/downvote"
            app:layout_constraintBottom_toBottomOf="parent"/>




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>