<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.profile.menu_profile.ProfilePersonal"
    android:padding="@dimen/global_page_padding_margin">

    <ImageButton
        android:id="@+id/edit"
        android:layout_width="@dimen/image_button"
        android:layout_height="@dimen/image_button"
        android:backgroundTint="@color/white"
        android:src="@drawable/edit"
        android:contentDescription="@string/edit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_shape"
        android:backgroundTint="@color/edit_text_background"
        android:hint="@string/email"
        android:text="@string/email"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="13dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/edit"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_shape"
        android:backgroundTint="@color/edit_text_background"
        android:hint="@string/password"
        android:text="@string/hidden_pass"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="13dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/profile_bookmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:padding="12dp"
        android:background="@drawable/edit_text_shape"
        android:backgroundTint="@color/bookmark"
        android:text="@string/bookmark_list"
        android:fontFamily="@font/poppins"
        android:textSize="20sp"
        android:textColor="@color/bookmark_text"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>