<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.home.HomeFragment"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/global_page_padding_margin">

        <TextView
            android:id="@+id/welcome_usname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            tools:text="@string/welcome"
            android:includeFontPadding="false"
            android:textSize="@dimen/medium_text"
            android:textAlignment="textStart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/usname"
            android:includeFontPadding="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textAlignment="textStart"
            tools:text="@string/tools_author"
            android:textSize="@dimen/medium_text"
            app:layout_constraintTop_toBottomOf="@id/welcome_usname"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageButton
            android:contentDescription="@string/profile_picture"
            android:id="@+id/pp"
            android:layout_width="@dimen/back_button"
            android:layout_height="@dimen/back_button"
            android:background="@drawable/image_button"
            android:backgroundTint="@color/secondary_light"
            tools:src="@drawable/ic_launcher_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <SearchView
            android:id="@+id/searchviewhome"
            android:layout_width="0dp"
            android:layout_height="@dimen/image_button"
            android:layout_marginTop="20dp"
            android:background="@drawable/search_bar"
            android:backgroundTint="@color/edit_text_background"
            android:hint="@string/hint_search"
            app:layout_constraintTop_toBottomOf="@id/usname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/newest_article"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/newest_article"
            android:textSize="@dimen/medium_text"
            android:textAlignment="textStart"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/searchviewhome"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvArticle"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/newest_article"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/article_item"/>

        <TextView
            android:id="@+id/tvArticle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_bold"
            android:includeFontPadding="false"
            android:textSize="@dimen/medium_text"
            android:textAlignment="textStart"
            android:text="@string/article"
            app:layout_constraintTop_toBottomOf="@id/rvArticle"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvArticle2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvArticle"
            tools:listitem="@layout/article_item_2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>