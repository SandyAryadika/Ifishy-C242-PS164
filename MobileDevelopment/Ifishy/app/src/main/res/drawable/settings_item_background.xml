<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle" >
            <padding android:top="15dp" android:bottom="30dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <item android:top="-30dp" android:right="-20dp" android:left="-10dp" android:bottom="-29dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@color/contact" />
        </shape>
    </item>

</layer-list>