<resources >

    <style name="Base.Theme.Ifishy" parent="Theme.Material3.DayNight">
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColorHint">@color/black</item>
    </style>



    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorPrimary">#303030</item>
        <item name="colorOnPrimary">@color/dark_background</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="SplashScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


</resources>